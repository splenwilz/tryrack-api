# FastAPI Auth Starter - Environment Variables
# Copy this file to .env and fill in your actual values
# Reference: https://fastapi.tiangolo.com/advanced/settings/

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=FastAPI Auth Starter
VERSION=0.1.0


# Alembic Configuration
# Used for database migrations
# Reference: https://alembic.sqlalchemy.org/en/latest/tutorial.html
ALEMBIC_CONFIG=alembic.ini

# Database Configuration
# PostgreSQL connection string format: postgresql+asyncpg://user:password@host:port/dbname
# Note: Special characters in password must be URL-encoded (e.g., ! = %21)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/fastapi_auth

# WorkOS Configuration
# Get these from your WorkOS dashboard: https://dashboard.workos.com/
WORKOS_API_KEY=your_workos_api_key_here
WORKOS_CLIENT_ID=your_workos_client_id_here
WORKOS_DEFAULT_CONNECTION_ID=optional_default_connection_id
# Allowed redirect URIs (comma-separated or JSON array)
# Example: http://localhost:3000/callback,https://app.example.com/callback
# Or JSON: ["http://localhost:3000/callback", "https://app.example.com/callback"]
WORKOS_ALLOWED_REDIRECT_URIS=http://localhost:3000/callback
# WORKOS_COOKIE_PASSWORD is the private key used to encrypt the session cookie. It has to be at least 32 characters long. 
# You can use the 1Password generator or the openssl library to generate a strong password via the command line:
# openssl rand -base64 24
WORKOS_COOKIE_PASSWORD="<your password>" # generate a secure password here
